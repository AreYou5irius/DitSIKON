<Page
    x:Class="SIKONClient.Info"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SIKONClient"
    xmlns:ViewModel="using:SIKONClient.ViewModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>


        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="241*"/>
            <RowDefinition Height="527*"/>
        </Grid.RowDefinitions>

        <!--#region Information brødtekst -->
        <ListView Grid.Row="1" Grid.Column="0" Grid.RowSpan="10" Grid.ColumnSpan="2">
            <StackPanel Orientation="Vertical" >
                <TextBlock Text="Indregistrering på konferencen" FontWeight="Bold" FontSize="20"/>
                <TextBlock Text="Personalet sørger for, at du får dit navneskilt, og hjælper dig med garderobe og indregistrering på hotellet. &#x0a;" TextWrapping="Wrap"/>
               
                <TextBlock Text="Parkering" FontWeight="Bold" FontSize="20"/>
                <TextBlock Text="Hotellet har 90 p-pladser og de koster kr. 80,- pr. døgn. Læs mere om parkering i Odense på www.odense.dk/parkering. Hvis man benytter offentlig transport, kan man gå fra Odense Banegård, det tager 10-15 min. &#x0a; " TextWrapping="Wrap"/>

                <TextBlock Text="Infostand på konferencen" FontWeight="Bold" FontSize="20"/>
                <TextBlock Text="Placering af autisme infostanden oplyses i mail til alle deltagere inden konferencens start. 1&#x0a;" TextWrapping="Wrap"/>

                <TextBlock Text="Autistisk oplægsholder" FontWeight="Bold" FontSize="20"/>
                <TextBlock Text="Vores kontaktpersoner er på standen og tager imod oplægsholdere. Du kan blive ledsaget til det rum, hvor din workshop skal afholdes. Vi sørger for, at teknikken fungerer og påtager os opgaver som fx. ordstyring og tidsstyring, så du kan koncentrere dig om dit oplæg. &#x0a;" TextWrapping="Wrap"/>

                <TextBlock Text="Udlevering af 'Vis-hensyn' badge samt 'Mit signal' armbånd og ørepropper" FontWeight="Bold" FontSize="20"/>
                <TextBlock Text="Vis-hensyn badgen er et tydeligt signal til folk omkring dig om, at du kan have bru for, at de tager hensyn og er tolerante. 'Vis-hensyn' badge giver adgang til lokaler, 15 minutter før plenumoplæg starter. Hvis du ønsker at spise middag i salen mandag aften, har du også her adgang 15 minutter før, så du kan finde dig en plads. 1&#x0a; 'Mit signal' er et armbånd med både en rød og en grøn side. Hvis du vælger at vende den røde side udad, er dit signal, at du ikke ønsker, at andre henvender sig til dig. Hvis du vender den grønne side udad, signalerer du, at andre kan kontakte dig. &#x0a;" TextWrapping="Wrap"/>

                <TextBlock Text="Udlevering af 'Reserveret' skilt" FontWeight="Bold" FontSize="20"/>
                <TextBlock Text="Hvis du bruger 'Vis-hensyn' badgen, kan du få udleveret et 'Reserveret' skilt, som du kan lægge på den plads, du gerne vil sidde på. Du kan også bare sætte dig på den ønskede plads, før alle andre lukkes ind. &#x0a;" TextWrapping="Wrap"/>

                <TextBlock Text="Informationsskærm" FontWeight="Bold" FontSize="20"/>
                <TextBlock Text="Skærmen viser lokaleændringer på kortet over konferenceområdet. Her får du også oplysninger om de øvrige muligheder i standen. Alle medarbejdere har 'Spørg – mig' T-shirts på med logoer fra Landsforeningen Autismes og Det Nationale Autismeinstitut. &#x0a;" TextWrapping="Wrap"/>

                <TextBlock Text="Book en rundvisning" FontWeight="Bold" FontSize="20"/>
                <TextBlock Text="Alle kan booke en fysisk rundvisning af hele konferenceområdet. Rundvisning gives af en medarbejder på Radisson og en medarbejder fra info-standen. &#x0a;" TextWrapping="Wrap"/>

                <TextBlock Text="Støtte til sanserne" FontWeight="Bold" FontSize="20"/>
                <TextBlock Text="Du har mulighed for at reservere en kædevest eller lignende til afprøvning i op til 3 timer under konferencen. Udstyret udlånes fra Autisme Info-standen &#x0a;" TextWrapping="Wrap"/>

                <TextBlock Text="Spisning under konferencen Særlige kosthensyn" FontWeight="Bold" FontSize="20"/>
                <TextBlock Text="Er du allergiker eller vegetar med særlige kosthensyn, skal du oplyse det i forbindelse med booking af din billet på www.sikon.dk. Her finder du også et felt, der hedder 'øvrige oplysninger'. I feltet 'øvrige oplysninger' kan du skrive, at du ønsker 'autisme special-menu', som består af en hovedret og en dessert: Pizza og vanilleis med knæk-glasur. Menuen kan serveres både i salen eller i området 'Backstage', som er indrettet autismevenligt til brug for de autistiske deltagere. Hvis du ønsker at spise på dit værelse, har du mulighed for at bestille en Autismevenlig konference pizza samt et glas øl, vand eller vin (du kan bestille din pizza fra et menukort, som du får i Autisme info-standen). Du skal bestille din pizza i info-standen før kl. 16.00 mandag eftermiddag. HUSK, at du skal skrive dine valg på din tilmelding, under 'øvrige oplysninger' nederst på tilmeldingen, når du booker dit billet til konferencen. 'Vis-hensyn' badge giver adgang til restauranten, 15 min før buffeten åbner. Du kan reserveres plads med 'Reserveret' skiltet, eller du kan blot sætte dig på den ønskede plads. Mulighed for at spise i 'stillezone' i forbindelse med særligt område for autister. I 'stillezonen' er buffeten tilrettet autistiske sanser. &#x0a;" TextWrapping="Wrap"/>

                <TextBlock Text="Middag med konversation" FontWeight="Bold" FontSize="20"/>
                <TextBlock Text="Mandag aften: Der ligger konversationskort på alle borde til brug for dialog med de andre ved bordet &#x0a;" TextWrapping="Wrap"/>

                <TextBlock Text="Alle deltagere og oplægsholdere med autisme får tilsendt en PDF-fil med disse informationer" FontWeight="Bold" FontSize="20"/>
                <TextBlock Text="Kort, der viser ruten mellem Odense Banegård og konferencecenteret. Det tager ca. 15 minutter at gå. Kort over konferenceområdet inddelt i douche farver, ud fra lokale – zone inddeling. Mulighed for at benytte SMS-service på særligt nummer under konferencen ved spørgsmål eller akut behov for hjælp og støtte.  3 spisesteder i Odense tæt på hotellet til dem, som ankommer søndag.  Annoncering af, hvordan og hvor man kan se plenumoplæg og udvalgte workshops på konferencen som live-streaming i beskyttede omgivelser. Alle med autisme har mulighed for indkvartering på H.C. Andersens hotel. Information om, hvilket stik der kan anvendes til tolke-udstyr, hvis man gerne vil anvende egne høretelefoner, samt info om dansk/engelsk kanal i tolkeudstyret. &#x0a;" TextWrapping="Wrap"/>

                <TextBlock Text="Særlig information til autistiske oplægsholdere" FontWeight="Bold" FontSize="20"/>
                <TextBlock Text="En person håndterer alle oplægsholderes henvendelser før konferencen, herefter: Tildeling af kontaktperson under konferencen med navn, billede og funktion. Email adresse, du kan skrive til fra to uger inden konferencen, hvis du har spørgsmål. Information om, hvor oplægsholdere kan henvende sig for at få billeder af det lokale, de skal holde deres oplæg i. Hvilket it-udstyr er der til rådighed ved oplæggene. Information om, hvordan oplægsholder skal medbringe sit oplæg, f.eks. på USB-stik. &#x0a;" TextWrapping="Wrap"/>

                <TextBlock Text="Stillerum/sanserum på konferencen" FontWeight="Bold" FontSize="20"/>
                <TextBlock Text="Lokale målrettet deltagere og oplægsholdere med autisme. Rummet indeholder bl.a. kuglestole, som man frit kan benytte og afprøve.  &#x0a;" TextWrapping="Wrap"/>

                <TextBlock Text="Under oplæg" FontWeight="Bold" FontSize="20"/>
                <TextBlock Text="Mulighed for at sende sine spørgsmål til oplægsholderen vi vores app under kursussiden. Spørgsmålet læses op af konferencier efter oplægget, så man ikke selv behøver at tage ordet &#x0a;" TextWrapping="Wrap"/>

                <TextBlock Text="Kontaktpersonernes opgaver, udover de ovenfor beskrevne" FontWeight="Bold" FontSize="20"/>
                <TextBlock Text="Bindeled mellem Radissons tekniske supportere og oplægsholderne med autisme. Under oplæg er kontaktpersonerne tovholdere på følgende opgaver: Lukker dørene, sætter oplæg i gang, introducerer oplægsholder, holder øje med og styrer tiden, ordstyrer ved spørgsmål og afslutter oplægget til tiden. &#x0a;" TextWrapping="Wrap"/>

                <TextBlock Text="Yderligere oplysninger" FontWeight="Bold" FontSize="20"/>
                <TextBlock Text="Konferenceprogrammet kan ses her på SIKON Konferencens side. Programmet kan også bestilles på tlf. 20 57 63 30. Konferenceinformation: Oplysning om overnatning og temastreamer m.m. forventes udsendt primo august 2020. Øvrigt kursusmateriale udleveres ved indgangen mandag morgen. Deltagerregistrering: Alle spørgsmål vedr. deltagerregistrering kan stilles til Lotte Irlind, telefon 20 57 63 30, eller på mail kursus@autismeforening.dk Fagligt indhold: Spørgsmål om konferencens faglige indhold kan stilles til Lars Grønlund, telefon 30 53 34 52, eller på mail l-g@autismeforening.dk." TextWrapping="Wrap"/>
            </StackPanel>
        </ListView>
        <!--#endregion-->


        <StackPanel Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2">
            <Image Source="ms-appx:///Assets/OdeonPræsentation.PNG"  Height="234" Width="430"/>
        </StackPanel>

    </Grid>
</Page>
