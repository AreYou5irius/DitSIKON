<Page
    x:Class="SIKONClient.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SIKONClient"
    xmlns:ViewModel="using:SIKONClient.ViewModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.DataContext>
        <ViewModel:ViewModelMainPage/>
    </Page.DataContext>

    <Frame x:Name="rootFrame">
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="75*"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button x:Name="Logo"
                    Click="Home_OnClick"
                    Command="{Binding Refresh}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="Transparent">
                <Image Source ="ms-appx:///Assets/Logo.png"/>
            </Button>

            <StackPanel HorizontalAlignment="Stretch" 
                        VerticalAlignment="Center"
                Grid.Column="1">

                <Button 
                    HorizontalAlignment="Stretch"
                    x:Name="Bruger" 
                    Height="45"
                    Click="UserPage_OnClick">

                    <StackPanel Orientation="Horizontal">
                        <Image Source="ms-appx:///Assets/bruger.png"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           Margin="0,0,10,0"
                           />
                    
                    <TextBlock 
                        VerticalAlignment="Center"
                        Text="{Binding AccountButton, UpdateSourceTrigger=PropertyChanged}">
                    </TextBlock>
                    </StackPanel>

                </Button>

                <Button 
                    HorizontalAlignment="Stretch"
                    x:Name="Login"
                    Margin="0,2,0,0"
                    Content="{Binding LogButton, UpdateSourceTrigger=PropertyChanged}"
                    Click="Login_OnClick"
                />

            </StackPanel>


        </Grid>

        <Grid
            Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.Resources>
                <Style 
                    TargetType="Button">
                    <Setter Property="Background" Value="#F18800"/>
                    <Setter Property="VerticalAlignment" Value="Stretch"/>
                    <Setter Property="HorizontalAlignment" Value="Stretch"/>

                </Style>
            </Grid.Resources>

            <Button x:Name="Program"
                    Command="{Binding Refresh}"
                    Grid.Column="0"
                    Content="Program" Click="Program_Click"/>

            <Button x:Name="Kurser"
                    Command="{Binding Refresh}"
                    Grid.Column="1"
                    Content="Kurser"
                    Click="Kurser_Click"/>

            <Button x:Name="Kort"
                    Command="{Binding Refresh}"
                    Grid.Column="2"
                    Content="Kort"
                    Click="Kort_OnClick"/>

            <Button x:Name="Info"
                    Command="{Binding Refresh}"
                    Grid.Column="3"
                    Content="Info"
                    Click="Info_OnClick"/>



        </Grid>
        <Frame x:Name="Frame1" 
            Grid.Row="2">
        </Frame>

    </Grid>
    </Frame>
</Page>
